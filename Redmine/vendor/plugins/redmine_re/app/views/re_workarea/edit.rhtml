<div id='detail_view' class='detail_view'>
  <%= render 're_artifact_properties/action_menu', {:artifact => @re_workarea} %>

<h2><%= t(:re_artifact) + ' #' + @re_workarea.artifact_id.to_s + ' - ' + t(:re_workarea) %></h2>

<%= errors_and_flash :re_workarea %>

<% form_for :re_workarea, :update => :detail_view, :url => {:action => "edit"} do |f| %>
    <%= hidden_field_tag :parent_id, params[:parent_id] %>

    <%= render "re_artifact_properties/shared_fields", {:f => f, :properties => @re_workarea.re_artifact_properties} %>

    <p>
      <%= submit_tag l(:re_save), :action => :edit %>
    </p>

<% end %>

<%= render "re_artifact_properties/manage_relationships", :id => params[:id], :project_id => @project.id if params.has_key? :id %>

</div>