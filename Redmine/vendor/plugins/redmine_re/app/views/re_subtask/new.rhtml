<h2>Subtask</h2>

<%= error_messages_for :re_subtask %>


<% form_for :re_subtask, :url => {:action => "create"}, :class => 'tabular' do |f| %>
    <%= hidden_field_tag :project_id, @project.id %>

    <div class="box">


  <% f.fields_for :re_artifact do |re_artifact| %>
        <p>
          <%= re_artifact.label :name, l(:re_artifact_name) %> <%= re_artifact.text_field :name %>
        </p>

        <p>
          <%= re_artifact.label :priority, l(:re_artifact_priority) %> <%= re_artifact.text_field :priority %>
        </p>
   <% end %>

      <p>
        <%= f.label :description, l(:re_subtask_description) %> <%= f.text_field :description %>
      </p>
            <p>
        <%= f.hidden_field :re_task_id %>
      </p>

      <p>
        <%= submit_tag l(:re_save) %>
      </p>

    </div>

    <%= javascript_tag "Form.Element.focus('re_subtask_re_artifact_attributes_name');" %>
<% end %>

<%= link_to 'Back', :action => :index, :project_id => @project.id %>