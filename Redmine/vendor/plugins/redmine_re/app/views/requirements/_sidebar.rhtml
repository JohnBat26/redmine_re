<%= javascript_include_tag 'prototype' %>


<h3><%= l(:re_sidebar) %></h3>

<h4><%= l(:re_goal) %></h4>

<ul>
  <li><%= link_to_remote    l(:re_create_goal),
                            :url => {:controller => 're_goal', :action => 'edit', :project_id => @project.id},
                            :method => :get,
                            :update => :detail_view %>
  </li>
  <li><%= link_to_remote    l(:re_show_goals),
                            :url => {:controller => 're_goal', :action => 'index', :project_id => @project.id},
                            :update => :detail_view %></li>
</ul>

<h4><%= l(:re_task) %></h4>

<ul>

  <li><%= link_to_remote    l(:re_show_subtasks),
