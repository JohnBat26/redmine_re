<div id="reSideBar">

  <a href="#" id="reSideBarTab" accesskey="n"><img src="<%=image_path('sidebar/slide_button.gif', :plugin => 'redmine_re') %>" alt="<%= t(:re_sidebar_hover) %>" title="<%= t(:re_sidebar_hover) %>"/></a>

  <div id="reSideBarContents" style="display:none;">
    <div id="reSideBarContentsInner">
      <h2><%= l(:re_sidebar) %></h2>

      <h3><%= l(:re_structuring_elements) %><br/></h3>
      
      <ul>
        <li><%= link_to l(:re_new_section), {
              :controller => 're_section',
              :action => 'new',
              :project_id => @project.id } %>
        </li>
        <li><%= link_to l(:re_new_workarea), {
              :controller => 're_workarea',
              :action => 'new',
              :project_id => @project.id } %>
        </li>
      </ul>
      
      <h3><%= l(:re_stakeholders) %><br/></h3>
      
      <ul>
        <li><%= link_to l(:re_new_user_profile), {
              :controller => 're_user_profile',
              :action => 'new',
              :project_id => @project.id } %>
        </li>
      </ul>      

      <h3><%= l(:re_goals) %></h3>
      
      <ul>
        <li><%= link_to l(:re_new_goal), {
              :controller => 're_goal',
              :action => 'new',
              :project_id => @project.id } %>
        </li>
      </ul>
      
      <h3><%= l(:re_tasks) %><br/></h3>
      
      <ul>
        <li><%= link_to l(:re_new_task), {
              :controller => 're_task',
              :action => 'new',
              :project_id => @project.id } %>
        </li>
      </ul>

      <h3><%= l(:re_relationships) %><br/></h3>

      <ul>
        <li><%= link_to l(:re_relationship_visualization), {
              :controller => 're_artifact_relationship',
              :action => 'visualization',
              :project_id => @project.id } %>
        </li>
      </ul>
    </div>
  </div>

</div>

<script type="text/javascript">
    //<![CDATA[
   Event.observe(window, 'load', function() {
        var sideBar = new ReSideBar('reSideBar');
    });
    //]]>
</script>
