<% content_for :header_tags do %>
<%= javascript_include_tag 'suggestible.js', :plugin => 'redmine_re' %>
<%= javascript_include_tag 'suggestible_custom.js', :plugin => 'redmine_re' %>
<%= stylesheet_link_tag 'redmine_re.css', :plugin => "redmine_re", :media => 'all' %>
<% end %>

<div id="detail_view" class="detail_view">
  <h2>Edit Query: <%= @query.name %></h2>
  <%= render 'form', :mode => :persist %>
</div>

<% content_for :sidebar do %>
  <h3>Actions</h3>
  <%= link_to 'Back', re_query_path(@project.id, @query), :class => 'icon icon-reload' %>
<% end %>

<%= render 'sidebar' %>