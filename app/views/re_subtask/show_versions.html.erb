<h2>Subtask Versions</h2>

<style>
td {
  width:300px;
}
thead {
  background-color:#507aaa;
  color:#f8f8f8;
}
tr#odd {
  background-color:#a5bfff;
}
#subtaskinfo {
  margin-left:20px;
}
</style>



	<div id="subtaskinfo">
		<h5>Versionen:</h5>
		<table>
		<thead><tr><td>Nr:</td><td>description</td><td>solution</td><td>action</td></tr></thead>
			<% @subtask.versions.each_with_index do |subtaskVersion, i| %>
				<tr class="<%= cycle('odd', 'even') %>">

                <td><%= subtaskVersion.version %></td>
                <td><%= subtaskVersion.description %></td>
				<td><%= subtaskVersion.solution %></td>

                <% if(subtaskVersion.version != @subtask.version) %>
                    <td><%= link_to "ChangeToThis", :action => "change_version", :id => @subtask.id, :project_id => @project.id, :version => subtaskVersion.version  %></td>
				<% else %>
                    <td><%= "current" %></td>
                <% end %>

                </tr>

			<% end %>
		</table>
	</div>
<h4></h4>