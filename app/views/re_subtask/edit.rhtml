<h2><%= l(:re_subtask) %></h2>

<%= error_messages_for :re_subtask %>


<% remote_form_for :re_subtask, :update => :detail_view, :url => {:action => "edit"}, :html => { :class => "tabular"} do |f| %>
    <%= hidden_field_tag :project_id, @project.id %>
    <%= hidden_field_tag :parent_id, params[:parent_id] %>

    <div class="box">


    <%= render "re_artifact_properties/shared_fields", :f => f %>

      <p>
        <%= submit_tag l(:re_save) %>
      </p>

    </div>

    <%= javascript_tag "Form.Element.focus('re_subtask_re_artifact_attributes_name');" %>
<% end %>

<%= link_to 'Back', :action => :index, :project_id => @project.id %>