<div id='detail_view' class='detail_view'>
<h2><%= l(:re_subtask) %></h2>

<%= error_messages_for :re_subtask %>


<% form_for :re_subtask, :url => {:action => "edit"}, :html => { :class => "tabular"} do |f| %>
    <%= hidden_field_tag :project_id, @project.id %>
    <%= hidden_field_tag :parent_id, params[:parent_id] %>

    <div class="box">

    <%= render "re_artifact_properties/shared_fields", :f => f, :properties => @re_subtask.re_artifact_properties %>

    <p>
      <%= submit_tag l(:re_save) %>
    </p>

    </div>

    <%= javascript_tag "Form.Element.focus('re_subtask_re_artifact_attributes_name');" %>
<% end %>

<%= render "re_artifact_properties/manage_relationships", :id => params[:id], :project_id => @project.id %>

<%= link_to 'Show Subtasks', :action => :index, :project_id => @project.id %>
</div>