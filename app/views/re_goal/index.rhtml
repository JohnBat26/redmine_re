<h3><%= l(:requirements_overview) %></h3>

<%# content_for :header_tags do %>
  <%#= stylesheet_link_tag "example.css", :plugin => "meetings", :media => "screen" %>
<%# end %>
<table>
    <thead>
        <tr>
          <% for column in ReGoal.content_columns %>
              <td><b><%= l('re_column_' + column.name) %></b></td>
              <% end %>
          <% for column in ReArtifact.content_columns %>
              <td><b><%= l('re_column_' + column.name) %></b></td>
        <% end %>
        <td><b><%= l(:re_column_edit) %></b></td>
        </tr>
    </thead>
    <tbody>
        <% for goal in @goals do %>
            <tr>
              <% for column in ReGoal.content_columns %>
                <td><%= goal.send(column.name) %></td>
              <% end %>

              <% for column in ReArtifact.content_columns %>
                <td><%= goal.re_artifact.send(column.name) %></td>
              <% end %>
              <td><%= link_to l(:re_edit), :action => 'edit', :id => goal.id, :project_id => @project.id %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to l(:re_create_goal), :action => 'edit', :project_id => @project.id %>  |
