<%= f.fields_for :re_use_case_step_expansions_attributes do |ex_form| %>
  <% type = re_use_case_step_expansion.re_expansion_type %>
  <tr id="use_case_step_expansion_<%= re_use_case_step_expansion.id %>" class="use_case_step_expansion_row">
    <td>
      <%= format_expansios_field_name(ex_form.select(:re_expansion_type, [ ['Exception', 1], ['Data',2], ['Other',3] ], :index => nil), re_use_case_step_expansion.id ) %>
    <td>
      <%= format_expansios_field_name(ex_form.text_area(:description, { :size => "35x2", :value => re_use_case_step_expansion.description, :index => nil,  :class => "use_case_step_textarea" }), re_use_case_step_expansion.id) %>
    </td>
    <td>
      <% if re_use_case_step_expansion.new_record? %>
        <%= link_to_function t(:re_delete_use_case_expansion), "$(this).up('.use_case_expansion_row').remove()", :class => "icon icon-del" %>
      <% else %>
        <%= link_to_function t(:re_delete_use_case_expansion), "markExpansionForDeletion(this)", :class => "icon icon-del" %>
        <%= format_expansios_field_name(ex_form.hidden_field(:id, :value => re_use_case_step_expansion.id, :index => nil), re_use_case_step_expansion.id) %>
        <%= format_expansios_field_name(ex_form.hidden_field(:_destroy, :index => nil, :class => "should_destroy"), re_use_case_step_expansion.id) %>
      <% end %>
    </td>
  </tr>
<% end %>

