<h3><%= l(:re_task_overview) %></h3>

<%# content_for :header_tags do %>
  <%#= stylesheet_link_tag "example.css", :plugin => "meetings", :media => "screen" %>
<%# end %>
<table>
    <thead>
        <tr>
          <% for column in ReTask.content_columns %>
                <td><b><%= column.name %></b></td>
              <% end %>
          <% for column in ReArtifact.content_columns %>
                          <td><b><%= column.name %></b></td>
        <% end %>
        </tr>
    </thead>
    <tbody>
        <% for task in @tasks do %>
            <tr class="<%= cycle('odd', 'even') %>">
              <% for column in ReTask.content_columns %>
                <td><%= task.send(column.name) %></td>
              <% end %>

              <% for column in ReArtifact.content_columns %>
                <td><%= task.re_artifact.send(column.name) %></td>
              <% end %>
              <td><%= link_to 'Delete', :action => 'delete', :id =>task.id, :project_id => @project.id %></td>
              <td><%= link_to 'Add Subtask', :controller => :re_subtask, :action => 'edit', :project_id => @project.id, :parent_id =>task.re_artifact.id %> |</td>  
              <td><%#= link_to 'Show Versions', :action => 'show_versions', :id =>task.id, :project_id => @project.id %></td>

            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Create Task', :action => 'edit', :project_id => params[:project_id] %>  |
