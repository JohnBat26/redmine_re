<%= stylesheet_link_tag "my.css", :plugin => "redmine_re", :media => 'all' %>
<h3> Ticket Stats </h3>


<table class="list">
  <% artifactcount = ReArtifactProperties.find(:all).count %>
  <% artifacts_wo_issues = Realization.artifacts_without_issues.count %>
  <% coverage = (100 - (artifacts_wo_issues.to_f/artifactcount.to_f) * 100).round(2)%>
  <tr class="<%= case coverage; when 0..50 then "coverage_critical" when 51..80 then "coverage_normal" when 81..100 then "coverage_good"  end;  %>">
    <td><%= t(:artifactcount) %> <%= artifactcount %></td>
    <td><%= t(:artifacts_wo_issues) %>  <%= artifacts_wo_issues%></td>
    <td><%= t(:artifact_issue_coverage) %> <%= coverage %>%</td>
  </tr>
</table>

<h3>Critical Tickets</h3>

<table class="list">
  <thead>
  <tr>
    <th colspan="3"><%= t(:ticketend_overdue) %></th>
  </tr>
  </thead>
  <tbody>
  <tr style="font-weight: bold;">
    <td width="45%"><%= t(:subject) %></td>
    <td><%= t(:status) %></td>
    <td><%= t(:dates) %></td>
  </tr>


  <% Issue.tickets_with_end_overdue.each do |ticket| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= link_to '#'+ticket.id.to_s+' '+ticket.subject, issue_path(ticket) %></td>
        <td><%= IssueStatus.find(ticket.status_id).name %></td>
        <td><%= ticket.start_date.to_s %> until <%= ticket.due_date.to_s %> (Done: <%= ticket.done_ratio %>%) </td>

      </tr>
  <% end %>
  </tbody>
</table>

