<ul>
	  <%= call_hook(:view_artifacts_context_menu_start, {:artifacts => @artifacts, :back => @back }) %>

	<% if !@artifact.nil? -%>
	        <li class="header"><%= @artifact.name %></li> 
	        <li><%= link_to 'Edit', {
  	          :controller => 're_artifact_properties',
  	          :action => 'edit', :id => @artifact.id
  	        },
            :class => "icon-edit" %>
          </li>
	        
					<li><%= link_to 'Delete', {
  	          :controller => 're_artifact_properties',
  	          :action => 'delete', :id => @artifact.id,
  	        },
            :confirm => t(:re_delete_confirm, {:what => @artifact.name}),
            :class => 'icon-del' %>
          </li>
	        <li class="folder icon icon-folder">
	                <a href="#" class="submenu" onclick="return false;"><%= l(:re_more) %>...</a>
	        </li>
	  <% end %>
	  <%= call_hook(:view_artifacts_context_menu_end, {:artifacts => @artifacts, :back => @back }) %>
</ul>