<ul>
	  <%= call_hook(:view_artifacts_context_menu_start, {:artifacts => @artifacts, :back => @back }) %>

	<% if !@artifact.nil? -%>
	        <li><%= link_to_remote 'Edit', :url => {:controller => @subartifact_controller, :action => 'edit', :id => @artifact.id, :project_id => @artifact.project_id},
	                               :update => :detail_view,
                                   :method => :get,
                                   :html => {:class => 'icon-edit', :disabled => false} %></li>   
	        <li><%= link_to_remote 'Delete', :url => { :controller => @subartifact_controller, :action => 'delete', :id => @artifact.artifact_id, :project_id => @artifact.project_id},
	                               :update => 'detail_view',
                                   :html => {:method => :post, :confirm => t(:re_delete_confirm, {:what=>@artifact.name}), :class => 'icon-del', :disabled => false} %></li>
	        <li class="folder">
	                <a href="#" class="submenu" onclick="return false;">Zugeordnete Artefakte</a>
	                <ul>

	                    <li>Weitere Links moeglich</li>
	                    <li>Und noch mehr Moeglichkeiten</li>
	                </ul>
	        </li>
	  <% end %>
	  <%= call_hook(:view_artifacts_context_menu_end, {:artifacts => @artifacts, :back => @back }) %>
</ul>