<div id="reSideBar">

  <a href="#" id="reSideBarTab" accesskey="n"><img src="<%=image_path('sidebar/slide_button.gif', :plugin => 'redmine_re') %>" alt="<%= t(:re_sidebar_hover) %>" title="<%= t(:re_sidebar_hover) %>"/></a>

  <div id="reSideBarContents" style="display:none;">
    <div id="reSideBarContentsInner">
      <h2><%= l(:re_sidebar) %></h2>

      <h3><%= l(:re_goal) %></h3>

      <ul>
        <li><%= link_to l(:re_create_goal), {
              :controller => 're_goal',
              :action => 'edit',
              :project_id => @project.id } %>
        </li>
        <li><%= link_to l(:re_show_goals), {
              :controller => 're_goal',
              :action => 'index',
              :project_id => @project.id } %>
        </li>
      </ul>

      <h3><%= l(:re_task) %><br/></h3>

      <ul>
        <li><%= link_to l(:re_create_task), {
              :controller => 're_task',
              :action => 'edit',
              :project_id => @project.id } %>
        </li>
        <li><%= link_to l(:re_show_tasks), {
              :controller => 're_task',
              :action => 'index',
              :project_id => @project.id } %>
        </li>
        <li><%= link_to l(:re_create_subtask), {
              :controller => 're_subtask',
              :action => 'edit',
              :project_id => @project.id } %>
        </li>
        <li><%= link_to l(:re_show_subtasks), {
              :controller => 're_subtask',
              :action => 'index',
              :project_id => @project.id } %>
        </li>
      </ul>

    </div>
  </div>

</div>

<script type="text/javascript">
    //<![CDATA[
   Event.observe(window, 'load', function() {
        var sideBar = new ReSideBar('reSideBar');
    });
    //]]>
</script>
